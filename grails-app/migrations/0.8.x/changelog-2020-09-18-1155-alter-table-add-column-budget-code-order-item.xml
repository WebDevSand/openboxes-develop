<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="awalkowiak" id="1809202011550-1">
    <preConditions onFail="MARK_RAN">
      <not>
        <columnExists tableName="order_item" columnName="budget_code_id"/>
      </not>
    </preConditions>
    <addColumn tableName="order_item">
      <column name="budget_code_id" type="CHAR(38)"/>
    </addColumn>
  </changeSet>

  <changeSet author="awalkowiak" id="1809202011550-2">
    <preConditions onFail="MARK_RAN">
      <not>
        <foreignKeyConstraintExists foreignKeyName="fk_order_item_budget_code"/>
      </not>
    </preConditions>
    <addForeignKeyConstraint baseColumnNames="budget_code_id" baseTableName="order_item"
      constraintName="fk_order_item_budget_code" deferrable="false" initiallyDeferred="false"
      referencedColumnNames="id" referencedTableName="budget_code"/>
  </changeSet>
</databaseChangeLog>
